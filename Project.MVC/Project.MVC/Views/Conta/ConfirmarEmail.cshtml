@{
    ViewBag.Title = "E-mail Confirmado - Quero Trocar!";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<div class="container main-container headerOffset" style="min-height:0;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="panel panel-default ">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse4" class="collapseWill">
                                Conta confirmada com sucesso!
                                <span class="pull-left"> <i class="fa fa-caret-right"></i></span>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse4" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div class="alert alert-success text-center" role="alert">
                                Parabéns @ViewBag.Usuario.Nome, sua conta foi confirmada com sucesso.                           
                            </div>
                            <div class="alert alert-info text-center" role="alert">
                                <a href="@Url.Action("Login", "Conta")">Acesse sua conta e comece a trocar!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


