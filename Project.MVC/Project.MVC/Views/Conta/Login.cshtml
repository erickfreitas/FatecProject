@model Project.Application.ViewModels.LoginViewModel
@{
    ViewBag.Title = string.Format("Acessar sistema - Quero Trocar!");
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<div class="container main-container headerOffset">
    <div class="container">
        <div class="row">
            <div class=" col-lg-8 col-lg-offset-2">
                <div class="panel panel-default ">
                    <div id="collapse1" class="panel-collapse collapse in">
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Conta", FormMethod.Post, new { @id = "NovoUsuarioForm" }))
                            {
                                <fieldset>
                                    <legend style="text-align:center;">Acessar conta </legend>
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.Email, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-md", @placeholder = "E-mail" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.Senha, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control input-md", @placeholder = "Senha" })
                                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <div class="col-md-offset-6">
                                            <div class="checkbox login-remember col-md-6">
                                                <label class="">
                                                    <div class="icheckbox_square-green iCheck-margin checked" style="position: relative;"><input name="rememberme" checked="checked" type="checkbox" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>
                                                    Lembrar-me
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    @Html.ValidationSummary(false)
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-primary">Entrar</button>
                                    </div>
                                </fieldset>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/unobstrusive")
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" type="text/javascript"></script>
}

