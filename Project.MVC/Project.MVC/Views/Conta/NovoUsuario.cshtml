@model Project.Application.ViewModels.RegistrarViewModel
@{
    ViewBag.Title = string.Format("Junte-se a nós - Quero Trocar!");
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<div class="container main-container headerOffset">
    <div class="container">
        <div class="row">
            <div class=" col-lg-8 col-lg-offset-2">
                <div class="panel panel-default ">
                    <div id="collapse1" class="panel-collapse collapse in">
                        <div class="panel-body">
                            @using (Html.BeginForm("NovoUsuario", "Conta", FormMethod.Post, new { @id = "NovoUsuarioForm" }))
                            {
                                <fieldset>
                                    <legend style="text-align:center;">Cadastra-se e comece a trocar</legend>
                                    @Html.AntiForgeryToken()
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.Nome, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control input-md", @placeholder = "Nome" })
                                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.Email, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-md", @placeholder = "E-mail" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.Senha, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control input-md", @placeholder = "Senha" })
                                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.ConfirmarSenha, new { @class = "col-md-4 control-label text-right" })
                                        <div class="col-md-6">
                                            @Html.PasswordFor(model => model.ConfirmarSenha, new { @class = "form-control input-md", @placeholder = "Confirme sua senha" })
                                            @Html.ValidationMessageFor(model => model.ConfirmarSenha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @Html.ValidationSummary(false)
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-primary">Efetuar cadastro</button>
                                    </div>
                                </fieldset>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/unobstrusive")
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" type="text/javascript"></script>
    @Scripts.Render("~/StoreContent/file-input/script")
}