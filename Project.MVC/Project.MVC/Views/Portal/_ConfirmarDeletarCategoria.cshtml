@model Project.Application.ViewModels.CategoriaViewModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="red bigger">Atenção</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div>
                    <div class="alert alert-danger">
                        <strong>Atenção!</strong> Você tem certeza que deseja remover a categoria @Model.Nome?
                        <br>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-sm" data-dismiss="modal">
                Fechar
            </button>            
            <button type="submit" class="btn btn-sm btn-danger" onclick="DeletarCategoria(@Model.CategoriaId)">
                <i class="ace-icon fa fa-times"></i>
                Confirmar
            </button>        
        </div>
    </div>
</div>
