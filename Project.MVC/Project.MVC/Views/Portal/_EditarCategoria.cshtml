@model Project.Application.ViewModels.CategoriaViewModel
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        @using (Html.BeginForm("EditarCategoria", "Portal", FormMethod.Post, new { @class = "form-horizontal", @id = "Categoria-Form" }))
        {
            @Html.HiddenFor(model => model.CategoriaId)
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Nome </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Nome, new { @placeholder = "Nome da Categoria", @class = "col-xs-10 col-sm-5" })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger col-xs-10 col-sm-9" })
                </div>
            </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Mostrar no menu inicial? </label>
                        <div class="col-xs-3">
                            <label>
                                <input name="MostrarNoMenuInicial" id="MostrarNoMenuInicial" class="ace ace-switch ace-switch-6" value="true" type="checkbox" checked="@Model.MostrarNoMenuInicial">
                                <span class="lbl"></span>
                                <input name="MostrarNoMenuInicial" type="hidden" value="false"
                            </label>
                        </div>
                    </div>

                    <div class="space-4"></div>

                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Salvar
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <a href="@Url.Action("Categorias", "Portal")">
                                <button class="btn btn-default" type="button">
                                    Voltar
                                </button>
                            </a>
                        </div>
                    </div>
        }
    </div><!-- /.col -->
</div><!-- /.row -->